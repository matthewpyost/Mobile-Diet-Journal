@model DietJournal.Web.Models.FoodCollectionModel
@{
    ViewBag.Title = "Food";
    Layout = "~/Views/Journal/_Layout.cshtml";
}

@if (Model != null)
{
    <ul data-role="listview">
        <li data-icon="plus"><a href="@Url.Action("AddFoodEntry", new { date = Model.EntriesDate })" data-transition="slide"><h2>@Model.EntriesDate.ToLongDateString()</h2></a></li>
    @foreach (var meal in Model)
    {
        <li data-role="list-divider">@meal.Key</li>
        
        if (meal.Value != null)
        {
            foreach (var entry in meal.Value)
            {
        <li><a href="@Url.Action("FoodEntry", new { id = entry.Key })">@entry.Value</a></li>
            }
        }
    }
    </ul>
}